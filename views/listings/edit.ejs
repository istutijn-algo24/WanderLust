<% layout("/layouts/boilerplate") %>
<div class="row">
    <div class="col-8 offset-2">
        <h3>Edit your Listing</h3>
        <form method="POST" 
        action="/listings/<%= listing._id %>?_method=PUT"
         novalidate class="needs-validation"
         enctype="multipart/form-data">
            
            <!-- Title -->
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input 
                    id="title"
                    name="listing[title]"
                    value="<%= listing.title %>"
                    type="text"
                    class="form-control"
                    required />
                <div class="valid-feedback">Title looks good!</div>
                <div class="invalid-feedback">Please enter a title.</div>
            </div>

            <!-- Description -->
            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea 
                    id="description"
                    name="listing[description]"
                    placeholder="Enter description" 
                    class="form-control" 
                    required>
                    <%= listing.description %>
                </textarea>
                <div class="invalid-feedback">Description should be a short description!</div>
            </div>

            <!-- Image URL -->
            <div class="mb-3">
                <label for="image" class="form-label">Upload new image</label>
                <input 
                    id="image"
                    name="listing[image]"
                    
                    type="file"
                    class="form-control"
                     />
            </div>
            <div class="mb-3">
                Original Listing Image
                <img src="<%= listing.image.url%>" />
            </div>

            <div class="mb-3">
                <label for="price" class="form-label">Price</label>
                <input 
                    id="price"
                    name="listing[price]" 
                    placeholder="Enter price"
                    type="text"
                    class="form-control" 
                    value="<%= listing.price %>" 
                    required />
                <div class="invalid-feedback">Please enter a valid price!</div>
            </div>

            <!-- Location -->
            <div class="mb-3">
                <label for="location" class="form-label">Location</label>
                <input 
                    id="location"
                    name="listing[location]" 
                    placeholder="Enter location" 
                    type="text" 
                    class="form-control" 
                    value="<%= listing.location %>" 
                    required />
                <div class="invalid-feedback">Please enter a valid location!</div>
            </div>

            <!-- Country -->
            <div class="mb-3">
                <label for="country" class="form-label">Country</label>
                <input 
                    id="country"
                    name="listing[country]" 
                    placeholder="Enter country" 
                    type="text" 
                    class="form-control" 
                    value="<%= listing.country %>" 
                    required />
                <div class="invalid-feedback">Please enter a valid country name!</div>
            </div>

            <!-- Submit Button -->
            <button class="btn btn-dark add-btn" type="submit">Update Listing</button>
            <br><br>
        </form>
    </div>
</div>
